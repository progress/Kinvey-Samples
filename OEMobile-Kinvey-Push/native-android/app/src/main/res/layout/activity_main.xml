<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ghost_white"
    tools:context="com.progress.kinvey.samples.android.push.MainActivity" >

    <TextView
        android:id="@+id/tvHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/top_text_margin"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/ebony"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvHello"
        android:layout_below="@+id/tvHello"
        android:layout_marginLeft="@dimen/button_margin"
        android:background="@color/kinvey_orange"
        android:minWidth="@dimen/button_min_width"
        android:onClick="logout"
        android:text="@string/logout"
        android:textColor="@color/ghost_white"
        android:visibility="invisible"/>

</RelativeLayout>
